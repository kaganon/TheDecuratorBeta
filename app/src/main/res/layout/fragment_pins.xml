<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="1dp"
    android:paddingBottom="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".PinsFragment">

    <!-- TODO: Update blank fragment layout -->
    <android.support.v7.widget.CardView
        app:cardCornerRadius="4dp"
        app:cardMaxElevation="2dp"
        app:cardElevation="2dp"
        android:layout_width="180dp"
        android:layout_height="180dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_marginTop="2dp"
                android:id="@+id/pin_img"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:scaleType="centerCrop"
                android:paddingTop="5dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/ic_launcher_background"
                />

            <TextView
                android:id="@+id/pin_title"
                android:layout_below="@+id/pin_img"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pin Object Title"
                android:layout_marginBottom="5dp"
                android:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="8sp"
                android:autoSizeMaxTextSize="25sp"
                android:textColor="#000"/>

            <TextView
                android:id="@+id/pin_cost"
                android:layout_below="@+id/pin_title"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:layout_marginTop="1dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pin Cost"
                android:layout_marginBottom="5dp"
                android:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="8sp"
                android:autoSizeMaxTextSize="25sp"
                android:textColor="#000"/>


        </RelativeLayout>


    </android.support.v7.widget.CardView>


</FrameLayout>